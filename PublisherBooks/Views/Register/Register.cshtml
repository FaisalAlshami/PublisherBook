@model PublisherBooks.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}


<div align="center">
    <div class="panellogin">
        <div class="paneltitle"> @ViewBag.Title </div>
        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <fieldset class="panelcontent" style=" text-align:left;  float:left; padding-left:30px;">
                <legend>Registration Form</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword)
                    </li>

                </ol>
                <input type="submit" value="Register" />
            </fieldset>
        }
        </div>
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
